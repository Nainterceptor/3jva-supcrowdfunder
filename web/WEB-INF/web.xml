<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

    <display-name>SupCrowdfunder</display-name>
    <filter>
        <filter-name>FlashFilter</filter-name>
        <filter-class>com.supinfo.supcrowdfunder.filter.FlashFilter</filter-class>
    </filter>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.supinfo.supcrowdfunder.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.supinfo.supcrowdfunder.filter.AuthFilter</filter-class>
    </filter>
    <filter>
        <filter-name>BoFilter</filter-name>
        <filter-class>com.supinfo.supcrowdfunder.filter.BoFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FlashFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/me/*</url-pattern>
        <url-pattern>/bo/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>BoFilter</filter-name>
        <url-pattern>/bo/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
